# 数据库连接串
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/flopapuv

# arXiv查询语句
ARXIV_QUERY=all

# 每日抓取延迟天数
ARXIV_SUBMISSION_DELAY_DAYS=3

# 推荐池规模调节
RECOMMENDATION_BATCH_RATIO=0.1
RECOMMENDATION_BATCH_MIN_SIZE=50
RECOMMENDATION_BATCH_MAX_SIZE=200

# 阿里云百炼 DashScope 兼容 OpenAI 接口配置
DASHSCOPE_API_KEY=sk-e82931f6f4a84f09a3d2995fd970f907
DASHSCOPE_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
EMBEDDING_MODEL_NAME=text-embedding-v4
EMBEDDING_DIMENSION=1024
EMBEDDING_MAX_BATCH_SIZE=10

# HTTP/HTTPS 代理设置（可选，用于访问 arXiv API）
